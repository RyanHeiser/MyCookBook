<UserControl x:Class="MyCookBook.Views.CreateRecipeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyCookBook.Views" xmlns:converters="clr-namespace:MyCookBook.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="24" Text="Create New Recipe" />

        <StackPanel Grid.Row="1" Margin="0 25 0 0">
            <TextBlock Text="Recipe name:" />
            <TextBox Margin="0 5 0 0" Text="{Binding RecipeVM.Name}" />
        </StackPanel>

        <Grid Grid.Row="2" Margin="0 10 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Prep/Cook Time" />
            <TextBox
                Grid.Row="1"
                Grid.Column="0"
                Text="{Binding RecipeVM.Minutes}"
                Margin="0 5 0 0" />

            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Margin="10 0 0 0"
                Text="Servings" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding RecipeVM.Servings}"
                Margin="10 5 0 0" />
        </Grid>

        <StackPanel Grid.Row="3" Margin="0 15 0 0">
            <TextBlock Text="Ingredients" />
            <ListView 
                ItemsSource="{Binding RecipeVM.Ingredients}" 
                Margin="0 5 0 0" 
                Name="IngredientList">
                <ListView.View>
                    <GridView>
                        <GridViewColumn>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Height="40" Width="100" Text="{Binding RecipeVM.Ingredients}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0 15 0 0">
            <TextBlock Text="Directions" />
            <ListView 
                ItemsSource="{Binding RecipeVM.Directions}" 
                Margin="0 5 0 0" 
                Name="DirectionList">
                <ListView.View>
                    <GridView>
                        <GridViewColumn>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Height="40" Width="100" Text="{Binding RecipeVM.Directions}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <StackPanel 
            Grid.Row="5" 
            Margin="0 15 0 0" 
            Orientation="Horizontal">

            <Button 
                Content="Submit" 
                Command="{Binding SubmitCommand}" 
                CommandParameter="{Binding NavParameters}"
                Padding="5" />
            <Button 
                Content="Cancel" 
                Margin="10 0 0 0" 
                Padding="5" />

        </StackPanel>

    </Grid>
</UserControl>
