<UserControl x:Class="MyCookBook.WPF.Views.RecipeBookListingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyCookBook.WPF.Views"
             mc:Ignorable="d" 
             Name="Root"
             MaxWidth="800"
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="/Resources/ApplicationResourceDictionary.xaml" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <TextBlock 
            Grid.Row="0" 
            Grid.Column="0" 
            Style="{StaticResource Title}"
            Text="My Cook Book" />

        <StackPanel 
            Grid.Row="0"
            Grid.Column="1"
            Margin="20 0 0 0"
            Orientation="Horizontal">
            <Button  
                
                Content="Add" 
                Command="{Binding AddCommand}"
                MinWidth="50"
                MaxHeight="40"
                Padding="5" />
            <Button  
                
                Content="Import" 
                Command="{Binding ImportCommand}"
                MinWidth="50"
                MaxHeight="40"
                Margin="10 0 0 0"
                Padding="5" />
        </StackPanel>

        

        <StackPanel 
            Margin="0 40 0 0" 
            Grid.Row="1" 
            Grid.Column="0"
            Grid.ColumnSpan="2">

            <TextBlock 
                Margin="0 0 0 20"
                Visibility="{Binding HasErrorMessage, Converter={StaticResource BooleanToVisibilityConverter}}"
                Foreground="Red"
                Text="{Binding ErrorMessage}" />

            <TextBlock 
                Text="No recipe books have been created yet. Click &quot;Add&quot; to add a recipe book." 
                Visibility="{Binding HasBooks, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>

            <ListView 
                ItemsSource="{Binding Books}"
                SelectedItem="{Binding SelectedBook, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"
                Visibility="{Binding HasBooks, Converter={StaticResource BooleanToVisibilityConverter}}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock 
                                Style="{StaticResource Subtitle}" 
                                TextWrapping="Wrap" 
                                Text="{Binding Name}" />
                            <Button
                                
                                Margin="0 10 0 0"
                                Content="Export"
                                Command="{Binding DataContext.ExportCommand, ElementName=Root}"
                                CommandParameter="{Binding Book}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
                
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                
                <ListView.Resources>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.Resources>

            </ListView>
        </StackPanel>

    </Grid>
</UserControl>
