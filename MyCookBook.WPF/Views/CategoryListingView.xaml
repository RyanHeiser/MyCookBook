<UserControl x:Class="MyCookBook.WPF.Views.CategoryListingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyCookBook.WPF.Views"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:converters="clr-namespace:MyCookBook.WPF.Converters"
             mc:Ignorable="d" 
             Name="UserControl"
             d:DesignHeight="600" d:DesignWidth="1000">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <converters:PercentageConverter x:Key="PercentageConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <TextBlock 
        Grid.Row="0" 
        Grid.Column="0" 
        FontSize="24" 
        Text="My Cook Book" />

        <Button 
        Grid.Row="0"
        Grid.Column="1"
        Content="Add" 
        Command="{Binding AddCommand}"
        Padding="5"
        Margin="20 0 0 0"/>

        <Grid Margin="0 20 0 0" Grid.Row="1" Grid.Column="0">
            <TextBlock 
            Text="No categories have been created yet. Click &quot;Add&quot; to add a category." 
            Visibility="{Binding HasCategories, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>

            <ListView 
            ItemsSource="{Binding Categories}"
            SelectedItem="{Binding SelectedCategory, Mode=OneWayToSource}"
            Visibility="{Binding HasCategories, Converter={StaticResource BooleanToVisibilityConverter}}">

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding SelectCategoryCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid MaxWidth="{Binding ActualWidth, ElementName=UserControl, Converter={StaticResource PercentageConverter}, ConverterParameter=0.8}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>

                            <TextBlock 
                                Grid.Row="0" 
                                Grid.ColumnSpan="4"
                                Margin="0 5"
                                FontSize="18"
                                Text="{Binding Name}" />

                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <TextBlock
                                    Margin="0 0 5 0"
                                    Text="Recipes:" />
                                <TextBlock
                                    Margin="0 0 20 0"
                                    Text="{Binding Count}" />
                            </StackPanel>

                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </Grid>

    </Grid>
</UserControl>
