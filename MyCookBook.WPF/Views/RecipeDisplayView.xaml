<UserControl x:Class="MyCookBook.WPF.Views.RecipeDisplayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyCookBook.WPF.Views"
             mc:Ignorable="d" 
             MaxWidth="1400"
             Name="Root"
             d:DesignHeight="800" d:DesignWidth="1400">
    <UserControl.Resources>
        <ResourceDictionary Source="/Resources/ApplicationResourceDictionary.xaml" />
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Button 
                
                Grid.Column="0" 
                Content="Back" 
                Command="{Binding BackCommand}" 
                MinWidth="50"
                MaxHeight="40"
                Padding="5" />
            <TextBlock 
                Grid.Column="1" 
                Style="{StaticResource Title}"
                Margin="30 0 0 0" 
                Text="{Binding RecipeViewModel.Name}" />
            
            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="30 0 0 0">
                <Button
                    
                    Content="Print"
                    Command="{Binding PrintCommand}"
                    MinWidth="50"
                    MaxHeight="40"
                    Margin="10 0 0 0"
                    Padding="5" />
                <Button
                    
                    Content="Move"
                    Command="{Binding MoveCommand}"
                    MinWidth="50"
                    MaxHeight="40"
                    Margin="10 0 0 0"
                    Padding="5" />
                <Button 
                    
                    Content="Edit" 
                    Command="{Binding EditCommand}"
                    MinWidth="50"
                    MaxHeight="40"
                    Margin="10 0 0 0"
                    Padding="5" />
                <Button 
                    Content="Delete" 
                    Command="{Binding DeleteCommand}"
                    CommandParameter="{Binding Recipe}"
                    MinWidth="50"
                    MaxHeight="40"
                    Margin="10 0 0 0" 
                    Padding="5" />
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="1" Margin="0 10 0 0" Orientation="Horizontal">
            <TextBlock 
                FontWeight="Bold" 
                Text="Time:" />
            <TextBlock 
                Margin="5 0 0 0" 
                Text="{Binding RecipeViewModel.Hours}" />
            <TextBlock
                Margin="5 0 0 0"
                Text="hrs" />
            <TextBlock 
                Margin="5 0 0 0" 
                Text="{Binding RecipeViewModel.Minutes}" />
            <TextBlock
                Margin="5 0 0 0"
                Text="min" />
            <TextBlock 
                Margin="30 0 0 0"
                FontWeight="Bold"
                Text="Servings:" />
            <TextBlock 
                Margin="5 0 0 0" 
                Text="{Binding RecipeViewModel.Servings}" />
        </StackPanel>

        <Image 
            MaxHeight="400"
            HorizontalAlignment="Left"
            Grid.Row="2"
            Margin="0 20 0 0"
            Source="{Binding RawImageData,
                Converter={StaticResource ByteArrayToBitmapConverter},
                Mode=OneWay}" />

        <TextBlock 
            Grid.Row="3"
            Margin="0 20 0 0"
            Text="{Binding RecipeViewModel.Description}" />

        <Grid Grid.Row="4" Margin="0 20 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock 
                Grid.Row="0" 
                Grid.Column="0" 
                Style="{StaticResource Subtitle}"
                Text="Ingredients"/>
            <ListView 
                ItemsSource="{Binding RecipeViewModel.Ingredients}" 
                ItemTemplate="{StaticResource IngredientsAndDirectionsDataTemplate}"
                Grid.Row="1" 
                Grid.Column="0"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            </ListView>

            <TextBlock 
                Grid.Row="0" 
                Grid.Column="1" 
                Style="{StaticResource Subtitle}"
                Text="Directions"/>
            <ListView 
                ItemsSource="{Binding RecipeViewModel.Directions}" 
                ItemTemplate="{StaticResource IngredientsAndDirectionsDataTemplate}"
                Grid.Row="1" 
                Grid.Column="1"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            </ListView>

        </Grid>
        
    </Grid>
</UserControl>
